@model IEnumerable<iLend.Models.Recipient>

@{
    ViewBag.Title = "Recipients";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Recipients</h2>
<p>
    @Html.ActionLink("New Recipient", "New", "Recipients", null, new { @class = "btn btn-primary" })
</p>

<table id="products" class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>Recipient</th>
        <th>User Group</th>
        <th>Delete</th>
    </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function() {
            $("#products").DataTable({
                ajax: {
                    url: "/api/recipients",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function(data, type, recipient) {
                            return "<a href='/recipients/edit/'" + recipient.id + "'>" + recipient.name + "</a>";
                        }
                    },
                    {
                        data: "userGroup.name"
                    },
                    {
                        data: "id",
                        render: function(data) {
                            return "<button class='btn-link js-delete' data-recipient-id=" + data + ">Delete</button>";
                        }
                    }
                ]
            });

            $("#products").on("click", ".js-delete",
                function() {
                    var button = $(this);

                    bootbox.dialog({
                        message: "Are you sure you want to delete this Recipient?",
                        title: "Confirm",
                        buttons: {
                            no: {
                                label: "No",
                                className: "btn-default",
                                callback: function () {
                                    bootbox.hideAll();
                                }
                            },
                            yes: {
                                label: "Yes",
                                className: "btn-danger",
                                callback: function () {
                                    $.ajax({
                                        url: "/api/products/" + button.attr("data-recipient-id"),
                                        method: "DELETE",
                                        success: function() {
                                            button.parents("tr").remove();
                                        }
                                    });
                                }
                            }
                        }
                    });
                });
        });
    </script>
}
