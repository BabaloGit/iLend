@model IEnumerable<iLend.Models.Recipient>

@{
    ViewBag.Title = "Recipients";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Recipients</h2>

@if (!Model.Any())
{
    <p>We don't have any recipients yet.</p>
}

else
{
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Recipient</th>
            <th>User Group</th>
        </tr>
        </thead>
        <tbody>
            @foreach (var recipient in Model)
            {
                <tr>
                    <td>@Html.ActionLink(recipient.Name, "Edit", "Recipients", new { id = recipient.Id }, null)</td>
                    <td>@recipient.UserGroup.Name</td>
                </tr>
            }
        </tbody>
    </table>
}