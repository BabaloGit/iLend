@model IEnumerable<iLend.Models.Recipient>

@{
    ViewBag.Title = "Recipients";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Recipients</h2>
<p>
    @Html.ActionLink("New Recipient", "New", "Recipients", null, new { @class = "btn btn-primary" })
</p>

@if (!Model.Any())
{
    <p>We don't have any recipients yet.</p>
}

else
{
    <table id="products" class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Recipient</th>
            <th>User Group</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
            @foreach (var recipient in Model)
            {
                <tr>
                    <td>@Html.ActionLink(recipient.Name, "Edit", "Recipients", new { id = recipient.Id }, null)</td>
                    <td>@recipient.UserGroup.Name</td>
                    <td>
                        <button data-recipient-id="@recipient.Id" class="btn-link js-delete">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section scripts
{
    <script>
        $(document).ready(function() {
            $("#products").DataTable();

            $("#products").on("click", ".js-delete",
                function() {
                    var button = $(this);

                    bootbox.dialog({
                        message: "Are you sure you want to delete this Recipient?",
                        title: "Confirm",
                        buttons: {
                            no: {
                                label: "No",
                                className: "btn-default",
                                callback: function () {
                                    bootbox.hideAll();
                                }
                            },
                            yes: {
                                label: "Yes",
                                className: "btn-danger",
                                callback: function () {
                                    $.ajax({
                                        url: "/api/products/" + button.attr("data-recipient-id"),
                                        method: "DELETE",
                                        success: function() {
                                            button.parents("tr").remove();
                                        }
                                    });
                                }
                            }
                        }
                    });
                });
        });
    </script>
}
