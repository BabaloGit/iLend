@model IEnumerable<iLend.Models.Product>

@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Products</h2>
<p>
    @Html.ActionLink("New Product", "New", "Products", null, new { @class = "btn btn-primary" })
</p>

<table id="products" class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>Product</th>
        <th>Category</th>
        <th>In Stock</th>
        <th>Available</th>
        <th>Delete</th>
    </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function() {
            var table = $("#products").DataTable({
                ajax: {
                    url: "/api/products",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function(data, type, product) {
                            return "<a href='/products/edit/" + product.id + "'>" + product.name + "</a>";
                        }
                    },
                    {
                        data: "category.name"
                    },
                    {
                        data: "numberInStock"
                    },
                    {
                        data: "numberAvailable"
                    },
                    {
                        data: "id",
                        render: function(data) {
                            return "<button class='btn-link js-delete' data-product-id=" + data + ">Delete</button>";
                        }
                    }
                ]
            });

            $("#products").on("click", ".js-delete",
                function() {
                    var button = $(this);

                    bootbox.dialog({
                        message: "Are you sure you want to delete this product?",
                        title: "Confirm",
                        buttons: {
                            no: {
                                label: "No",
                                className: "btn-default",
                                callback: function () {
                                    bootbox.hideAll();
                                }
                            },
                            yes: {
                                label: "Yes",
                                className: "btn-info",
                                callback: function () {
                                    $.ajax({
                                        url: "/api/products/" + button.attr("data-product-id"),
                                        method: "DELETE",
                                        success: function() {
                                            table.row(button.parents("tr")).remove().draw();
                                        }
                                    });
                                }
                            }
                        }
                    });
                });
        });
    </script>
}