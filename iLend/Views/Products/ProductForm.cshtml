@model iLend.ViewModels.ProductFormViewModel
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Products"))
{
    <div class="form-group">
            @Html.LabelFor(m => m.Product.Name)
            @Html.TextBoxFor(m => m.Product.Name, new { @class = "form-control" })
        </div>
    <div class="form-group">
            @Html.LabelFor(m => m.Product.CategoryId)
            @Html.DropDownListFor(m => m.Product.CategoryId, new SelectList(Model.Categories, "Id", "Name"), "-- No category selected --", new {@class = "form-control"})
        </div>
    <div class="form-group">
            @Html.LabelFor(m => m.Product.NumberInStock)
            @Html.TextBoxFor(m => m.Product.NumberInStock, new { @class = "form-control" })
        </div>
    @Html.HiddenFor(m => m.Product.Id)
    @Html.ActionLink("Cancel", "Index", "Products", null, new { @class = "btn btn-default" }) <span>&nbsp;</span>
    <button type="submit" class="btn btn-primary">Save</button>
}