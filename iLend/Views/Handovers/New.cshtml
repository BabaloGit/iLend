@model dynamic

@{
    ViewBag.Title = "New Handover Form";
}

<h2>New Handover Form</h2>

<form id="newHandover">
    <div class="form-group">
        <label>Recipient</label>
        <div class="tt-container">
            <input id="recipient" type="text" value="" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label>Product</label>
        <div class="tt-container">
            <input id="product" type="text" value="" class="form-control" />
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-4 col-sm-4">
            <ul id="products" class="list-group"></ul>
        </div>
    </div>
    
    <button class="btn btn-primary">Submit</button>
</form>

@section scripts
{
    <script>
        $(document).ready(function () {

            var vm = {
                productIds: []
            };

            var recipients = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                remote: {
                    url: '/api/recipients?query=%QUERY',
                    wildcard: '%QUERY'
                }
            });

            $('#recipient').typeahead({
                    minLength: 3,
                    highlight: true
            },
            {
                name: 'recipients',
                display: 'name',
                source: recipients
            }).on("typeahead:select",
            function(e, recipient) {
                vm.recipientId = recipient.id;
            });

            var products = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                remote: {
                    url: '/api/products?query=%QUERY',
                    wildcard: '%QUERY'
                }
            });

            $('#product').typeahead({
                    minLength: 3,
                    highlight: true
            },
            {
                name: 'products',
                display: 'name',
                source: products
            }).on("typeahead:select",
            function(e, product) {
                $("#products").append("<li class='list-group-item'>" + product.name + "</li>");

                $("#product").typeahead("val", "");

                vm.productIds.push(product.id);
            });

            $("#newHandover").submit(function(e) {
                e.preventDefault();

                $.ajax({
                    url: "/api/newhandovers",
                    method: "post",
                    data: vm
                })
                .done(function() {
                    toastr.success("Handover(s) successfully recorded.");
                })
                .fail(function() {
                        toastr.error("An unexpected error occured.");
                });
            });
        });
    </script>
}
